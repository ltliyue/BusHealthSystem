<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_reg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3"
                android:padding="10dp"
                android:text="参数配置"
                android:textSize="14sp"
                android:typeface="monospace" />

            <LinearLayout
                android:id="@+id/ll_row1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv_reg_title"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/shape_left_radius_color_square"
                    android:gravity="center"
                    android:text="IP"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_ip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#d3d3d3"
                    android:inputType="text"
                    android:paddingLeft="12.0dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_row2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ll_row1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/shape_left_radius_color_square"
                    android:gravity="center"
                    android:text="端口"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_pot"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#d3d3d3"
                    android:inputType="number"
                    android:paddingLeft="12.0dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_row3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ll_row2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_radius_color_square"
                    android:text="连接Wifi"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_discon"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_radius_color_square"
                    android:text="断开Wifi"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_reg_title2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll_row3"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:id="@+id/ll_row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reg_title2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3d3d3"
                    android:padding="10dp"
                    android:text="信息接收"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_left_radius_color_square"
                        android:gravity="center"
                        android:text="车内温度"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_l1"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:gravity="center"
                        android:paddingLeft="12.0dp"
                        android:text="-"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:paddingLeft="12.0dp"
                        android:text="℃"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_cnwd"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_left_radius_color_square"
                        android:gravity="center"
                        android:text="车外温度"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_l2"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:gravity="center"
                        android:paddingLeft="12.0dp"
                        android:text="-"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:paddingLeft="12.0dp"
                        android:text="℃"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_left_radius_color_square"
                        android:gravity="center"
                        android:text="电压"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_l3"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:gravity="center"
                        android:paddingLeft="12.0dp"
                        android:text="-"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:paddingLeft="12.0dp"
                        android:text="V"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_left_radius_color_square"
                        android:gravity="center"
                        android:text="电流"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_l4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:gravity="center"
                        android:paddingLeft="12.0dp"
                        android:text="-"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:paddingLeft="12.0dp"
                        android:text="A"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_left_radius_color_square"
                        android:gravity="center"
                        android:text="风机转速"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_l5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:gravity="center"
                        android:paddingLeft="12.0dp"
                        android:text="-"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#d3d3d3"
                        android:paddingLeft="12.0dp"
                        android:text="r/min"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

